{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Solar Electricity Consumption per Continent (2000-2016)",
  "description": "Stacked Chart on solar_electricity",
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/Etan01/FIT3179Assignment2/main/data/electricty_clean.csv"
  },
  "vconcat": [
    {
      "layer": [
        {
          "width": 500,
          "height": 400,
          "transform": [
            {
              "filter": {
                "field": "year",
                "timeUnit": "year",
                "range": [2000, 2020]
              }
            },
            {"filter": {"param": "click"}}
          ],
          "mark": "area",
          "encoding": {
            "x": {
              "timeUnit": "year",
              "field": "year",
              "title": "Year (2000-2016)",
              "axis": {"domain": false, "format": "%Y", "tickSize": 0}
            },
            "y": {
              "aggregate": "sum",
              "field": "solar_electricity",
              "title": "Solar Electricity",
              "stack": "zero"
            },
            "color": {"field": "continent", "type": "nominal"},
            "tooltip": [{"field": "continent", "type": "ordinal"}]
          }
        }
      ]
    },
    {
      "encoding": {
        "color": {
          "condition": {
            "param": "click",
            "field": "continent",
            "scale": {
              "domain": ["Americas", "Europe", "Africa", "Asia", "Oceania"],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "value": "lightgray"
        },
        "x": {"aggregate": "count"},
        "y": {"title": "Continent", "field": "continent"}
      },
      "width": 600,
      "mark": "bar",
      "params": [
        {"name": "click", "select": {"type": "point", "encodings": ["color"]}}
      ]
    },
    {
      "transform": [
    {
      "filter": {
        "field": "country",
        "oneOf": ["China", "India", "United States", "Indonesia", "Brazil", "Russia"]
      }
    },
    {
      "filter": {
        "field": "year",
        "oneOf": [2000, 2016]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "total",
      "type": "quantitative",
      "title": "Total Electricity Consumption (Terawatt)"
    },
    "y": {
      "field": "country",
      "type": "nominal",
      "title": "Country",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "country",
          "type": "nominal"
        },
        "color": {"value": "#db646f"}
      }
    },
    {
      "width": 600,
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "year",
          "type": "ordinal",
          "scale": {
            "domain": [2000, 2016],
            "range": ["#e6959c", "#911a24"]
          },
          "title": "Year"
        },
        "size": {"value": 100},
        "opacity": {"value": 1},
        "tooltip": [{"field": "country", "type": "nominal"},
        {"field": "total", "type": "quantitative", "title": "Total Electricity(Terawatt)"}]
      }
    }
    ]
    }
  ]
}